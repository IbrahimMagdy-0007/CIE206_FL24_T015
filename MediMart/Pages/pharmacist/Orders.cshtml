@page
@model PharmacistOrdersModel
@{
    ViewData["Title"] = "Place Orders";
}

<div class="container mt-5">
    <h2>Place Orders</h2>
    <p>Select prescriptions to create orders for customers.</p>

    <table class="table">
        <thead>
            <tr>
                <th>Prescription ID</th>
                <th>Customer Name</th>
                <th>Medication</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                    <tr>
                        <td>@prescription.Id</td>
                        <td>@prescription.CustomerName</td>
                        <td>@prescription.Medication</td>
                        <td>
                            <button class="btn btn-primary btn-sm">Create Order</button>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
