@page
@model ProductsModel
@{
    ViewData["Title"] = "Product Management";
}

<h1 class="mb-4">Product Management</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">Product Table</h5>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search Products..." />
        </div>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock Level</th>
                    <th>Supplier</th>
                    <th>Exp Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Paracetamol</td>
                    <td>Medicine</td>
                    <td>$5</td>
                    <td>50</td>
                    <td>Health Supplies Inc.</td>
                    <td>01/01/2025</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-primary">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Aspirin</td>
                    <td>Medicine</td>
                    <td>$10</td>
                    <td>20</td>
                    <td>Pharma Wholesale</td>
                    <td>01/06/2024</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-primary">Edit</a>
                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Add / Edit Product</h5>
        <form>
            <div class="mb-3">
                <label for="productName" class="form-label">Name</label>
                <input type="text" class="form-control" id="productName" placeholder="Enter product name" />
            </div>
            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input type="number" class="form-control" id="productPrice" placeholder="Enter product price" />
            </div>
            <div class="mb-3">
                <label for="productCategory" class="form-label">Category</label>
                <select class="form-select" id="productCategory">
                    <option>Medicine</option>
                    <option>Equipment</option>
                    <option>Supplement</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="stockLevel" class="form-label">Stock Level</label>
                <input type="number" class="form-control" id="stockLevel" placeholder="Enter stock level" />
            </div>
            <div class="mb-3">
                <label for="expDate" class="form-label">Expiration Date</label>
                <input type="date" class="form-control" id="expDate" />
            </div>
            <div class="mb-3">
                <label for="productSupplier" class="form-label">Supplier</label>
                <textarea class="form-control" id="productSupplier" rows="3" placeholder="Enter supplier details"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    h5.card-title {
        font-weight: bold;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>
