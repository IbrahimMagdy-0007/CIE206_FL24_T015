@{
    var role = Context.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediMart</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/layout.css" />
</head>
<body>
    @if (!string.IsNullOrEmpty(role)) 
    {
        <div class="sidebar">
            <h2>LOGO</h2>
            @if (role == "Admin")
            {
                <a href="/Admin/Dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="/Admin/Products"><i class="fas fa-box"></i> Product Management</a>
                <a href="/Admin/Users"><i class="fas fa-users"></i> User Management</a>
                <a href="/Admin/Inventory"><i class="fas fa-warehouse"></i> Inventory Management</a>
                <a href="/Admin/Orders"><i class="fas fa-shopping-cart"></i> Order Management</a>
                <a href="/Admin/Statistics"><i class="fas fa-chart-pie"></i> Statistics</a>
                <a href="/Admin/Insurance"><i class="fas fa-briefcase-medical"></i> Insurance Management</a>
            }
            else if (role == "Customer")
            {
                <a href="/Customer/Home" class="active"><i class="fas fa-home"></i> Home</a>
                <a href="/Customer/Profile"><i class="fas fa-user"></i> Profile</a>
                <a href="/Customer/Store"><i class="fas fa-store"></i> Store</a>
                <a href="/Customer/Prescription"><i class="fas fa-file-prescription"></i> Prescription</a>
                <a href="/Customer/Feedback"><i class="fas fa-comment-dots"></i> Feedback</a>
                <a href="/Customer/Cart"><i class="fas fa-shopping-cart"></i> Cart</a>
            }
            else if (role == "Pharmacist")
            {
                <a href="/Pharmacist/Dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="/Pharmacist/Prescriptions"><i class="fas fa-file-prescription"></i> Manage Prescriptions</a>
                <a href="/Pharmacist/Orders"><i class="fas fa-shopping-cart"></i> Place Orders</a>
            }
            <a href="/Logout"><i class="fas fa-sign-out-alt"></i> Log Out</a>
        </div>
    }
    <div class="main">
        <div class="topbar d-flex justify-content-between align-items-center py-3 px-4">
            <span>@ViewData["Title"]</span>
            <div>
                @if (string.IsNullOrEmpty(role)) 
                {
                    <a href="/Login" class="btn btn-primary me-2">Login</a>
                    <a href="/SignUp" class="btn btn-success">Sign Up</a>
                }
            </div>
        </div>
        <div class="content mt-4">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
